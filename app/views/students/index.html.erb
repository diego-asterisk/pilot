<p id="notice"><%= notice %></p>

<h1 class="tit"><%= t(:Students) %> <%= @cursada %></h1>
<p>
<%= link_to t(:Change_grade), grades_path, {:method => :get}%>        
</p>
<% if session[:grade_id].present? %>

<table class="table table-responsive-md table-striped">
  <thead>
    <tr>
      <th><%= t(:Email) %></th>
      <th><%= t(:Last_name) %></th>
      <th><%= t(:First_name) %></th>
      <th><%= t(:Document_number) %></th>
      <th><%= t(:Docket_number) %></th>
      <th><%= t(:Grade) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.email %></td>
        <td><%= student.last_name %></td>
        <td><%= student.first_name %></td>
        <td><%= student.document_number %></td>
        <td><%= student.docket_number %></td>
        <td><%= student.grade.year %></td>
        <td><%= link_to t(:Show), student %></td>
        <td><%= link_to t(:Edit), edit_student_path(student) %></td>
        <td><%= link_to t(:Destroy), student, method: :delete, data: { confirm: t(:are_sure) + '?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div style="margin-bottom: 7em">
<%= link_to t(:New_student), new_student_path %>
|
<%= link_to t(:Change_grade), grades_path, {:method => :get}%>        
</div>

<% else %>

<p class="info"><%= t(:No_grade) %>.</p>
<p class="warning"><%= t(:For_report) %>: 
<%= link_to t(:Change_grade), grades_path, {:method => :get}%>        
</p>

<% end %>
