<p id="notice"><%= notice %></p>

<h1 class="tit">Students <%= @cursada %></h1>
<p>
<%= link_to t(:Change_grade), grades_path, {:method => :get}%>        
</p>
<% if session[:grade_id].present? %>

<table class="table table-responsive-md table-striped">
  <thead>
    <tr>
      <th>Email</th>
      <th>Last name</th>
      <th>Fist name</th>
      <th>Document number</th>
      <th>Docket number</th>
      <th>Grade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.email %></td>
        <td><%= student.last_name %></td>
        <td><%= student.first_name %></td>
        <td><%= student.document_number %></td>
        <td><%= student.docket_number %></td>
        <td><%= student.grade.year %></td>
        <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div style="margin-bottom: 7em">
<%= link_to 'New Student', new_student_path %>
|
<%= link_to t(:Change_grade), grades_path, {:method => :get}%>        
</div>

<% else %>

<p class="info">No hay una cursada elegida.</p>
<p class="warning">Elegir una cursada para ver el reporte: 
<%= link_to "Grades", grades_path, {:method => :get}%>        
</p>

<% end %>
