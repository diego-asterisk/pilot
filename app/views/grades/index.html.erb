<p id="notice"><%= notice %></p>

<h1 class="tit">Grades</h1>

<table class="table table-responsive-md table-striped">
  <thead>
    <tr>
      <th>Year</th>
      <th>Choice</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @grades.each do |grade| %>
      <tr>
        <td><%= grade.year %></td>
        <td>
        <% if grade.id.to_s == session[:grade_id] %>
          Current
        <% else %>
          <%= link_to 'Select', selected_path(grade) %>
        <% end %>
        </td>
        <td><%= link_to 'Show', grade %></td>
        <td><%= link_to 'Edit', edit_grade_path(grade) %></td>
        <td><%= link_to 'Destroy', grade, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div style="margin-bottom: 7em">
<%= link_to 'New Grade', new_grade_path %>
</div>
