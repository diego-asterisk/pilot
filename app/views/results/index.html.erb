<p id="notice"><%= notice %></p>

<h1>Results</h1>


<table class="table table-responsive-md table-striped">
  <thead>
    <tr>
      <th>Score</th>
      <th>Student</th>
      <th>Exam Instance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @results.each do |result| %>
      <tr>
        <td><%= result.score %></td>
        <td><%= result.student.last_name + ' ' + result.student.first_name %></td>
        <td><%= result.exam_instance.title %></td>
        <td><%= link_to 'Show', result %></td>
        <td><%= link_to 'Edit', edit_result_path(result) %></td>
        <td><%= link_to 'Destroy', result, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div style="margin-bottom: 7em">
<%= link_to 'New Result', new_result_path %>
</div>

